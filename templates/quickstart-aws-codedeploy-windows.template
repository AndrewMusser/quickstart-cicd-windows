      },
      "ap-northeast-2": {
        "WS2012R2": "ami-082ee566"
      },
      "ap-south-1": {
        "WS2012R2": "ami-7aacc615"
      },
      "ap-southeast-1": {
        "WS2012R2": "ami-e113c082"
      },
      "ap-southeast-2": {
        "WS2012R2": "ami-83b198e0"
      },
      "eu-central-1": {
        "WS2012R2": "ami-fa799095"
      },
      "eu-west-1": {
        "WS2012R2": "ami-50e67823"
      },
